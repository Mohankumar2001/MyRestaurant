<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC1A146B"
    tools:context=".entry">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GM Foods"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#B0D1C7"
        android:background="#1C4C75"
        android:id="@+id/title"
        android:gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/title2"
        android:textColor="@color/purple_200"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/orderno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:hint="Order number"
        android:textColorHint="#C689EC" />

    <EditText
        android:id="@+id/tableno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderno"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:hint="Table no"
        android:inputType="number"
        android:textColorHint="#C689EC" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableno"
        android:layout_margin="10dp"
        android:hint="dish1"
        android:textColorHint="#C689EC"
        android:gravity="center"
        android:inputType="text"
        android:id="@+id/dish1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish1"
        android:layout_margin="10dp"
        android:hint="dish2"
        android:textColorHint="#C689EC"
        android:gravity="center"
        android:inputType="text"
        android:id="@+id/dish2"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish2"
        android:layout_margin="10dp"
        android:hint="dish3"
        android:textColorHint="#C689EC"
        android:gravity="center"
        android:inputType="text"
        android:id="@+id/dish3"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish3"
        android:layout_margin="10dp"
        android:hint="dish4"
        android:textColorHint="#C689EC"
        android:gravity="center"
        android:inputType="text"
        android:id="@+id/dish4"
        />

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish4"
        android:layout_centerHorizontal="true"
        android:background="@color/teal_700"
        android:text="Place Order"
        android:textColor="#31106C"
        android:textSize="25dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/teal_700"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:text="View Orders"
        android:id="@+id/view"
        android:layout_below="@id/enter"
        android:textColor="#31106C"
        />



</RelativeLayout>